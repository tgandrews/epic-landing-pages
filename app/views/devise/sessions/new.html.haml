.col-md-4.col-md-offset-4.well.signin
  %h2 Sign in

  = flash_message layout_flash: false

  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    = form_group_for f, :email, label: false do
      .input-group
        = f.email_field :email, class: 'form-control input-lg', autofocus: true, placeholder: 'Email'
        %span.input-group-addon.glyphicon.glyphicon-user

    = form_group_for f, :password, label: false do
      .input-group
        = f.password_field :password, class: 'form-control input-lg', autofocus: true, placeholder: 'Password'
        %span.input-group-addon.glyphicon.glyphicon-lock

    - if devise_mapping.rememberable?
      .form-group
        = f.check_box :remember_me
        = f.label :remember_me
    %div= f.submit "Sign in", class: 'btn btn-primary btn-block'

  = render "devise/shared/links"
